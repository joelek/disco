{
	"compilerOptions": {
		"typeRoots" : ["./node_modules/@types"],
		"module": "commonjs",
		"target": "es6",
		"noImplicitAny": false,
		"strictNullChecks": false,
		"moduleResolution": "node",
		"sourceMap": true,
		"outDir": "build",
		"baseUrl": ".",
		"removeComments": true,
		"paths": {
			"*": [
				"node_modules/*"
			]
		}
	},
	"include": [
		"source/**/*"
	]
}
