{
	Content: {
		type: string,
		selector: string
	},
	MovieContent: (@Content & {
		type: "movie",
		title: string,
		year: number,
		part: number,
		imdb: string,
		poster_url: string,
		summary: string,
		genres: string[],
		actors?: string[]
	}),
	EpisodeContent: (@Content & {
		type: "episode",
		title: string,
		show: string,
		season: number,
		episode: number,
		imdb: string,
		imdb_show: string,
		year: number,
		summary: string,
		genres_show: string[],
		actors_show?: string[]
	}),
	UnknownContent: (@Content & {
		type: "unknown"
	}),
	MediaContent: (@UnknownContent | @MovieContent | @EpisodeContent),
	MediaType: ("paldvd" | "ntscdvd" | "bluray"),
	Media: {
		type: @MediaType,
		content: @MediaContent[]
	},
	MediaDatabase: { @Media }
}
